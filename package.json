{
  "name": "gitcard",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "sh -c 'vite --host --port ${WEB_PORT:-5173}'",
    "dev:api": "sh -c 'PORT=${API_PORT:-3000} bun --watch scripts/dev-api.js'",
    "dev:all": "sh -c 'if [ -z \"$GITHUB_TOKEN\" ]; then export GITHUB_TOKEN=\"$(gh auth token)\"; fi; export API_PORT=${API_PORT:-3000}; export WEB_PORT=${WEB_PORT:-5173}; trap \"kill 0\" EXIT INT TERM; bun run dev:api & bun run dev:web'",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server.js"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "express": "^4.21.0",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "satori": "^0.12.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.0"
  }
}
